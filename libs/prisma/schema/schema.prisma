generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  username      String
  role          Role           @default(USER)
  phone         String?        @unique
  password      String
  basket        Basket?
  orders        Order[]
  payments      Payment[]
  refreshTokens RefreshToken[]
  notifications Notification[]
  otps          Otp[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  deletedAt     DateTime?

  @@map("users")
}

model RefreshToken {
  id        Int       @id @default(autoincrement())
  tokenId   String    @unique
  tokenHash String    @unique
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  isRevoked Boolean   @default(false)
  expiresAt DateTime
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@map("refresh_tokens")
}

model Otp {
  id          Int       @id @default(autoincrement())
  phoneNumber String
  code        String
  isVerified  Boolean   @default(false)
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  expiredAt   DateTime
  createdAt   DateTime  @default(now())
  deletedAt   DateTime?
}

model Product {
  id          Int             @id @default(autoincrement())
  name        String
  description String?
  price       Int
  stock       Int             @default(0)
  status      ProductStatus   @default(AVAILABLE)
  category    ProductCategory @default(TOYS)
  discount    Float?          @default(0)
  basketItems BasketItem[]
  orderItems  OrderItem[]
  stockMoves  StockMovement[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  deletedAt   DateTime?

  @@map("products")
}

model Basket {
  id          Int          @id @default(autoincrement())
  userId      Int          @unique
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  basketItems BasketItem[]
  orders      Order[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  deletedAt   DateTime?

  @@map("baskets")
}

model BasketItem {
  id        Int       @id @default(autoincrement())
  basketId  Int
  productId Int
  quantity  Int
  basket    Basket    @relation(fields: [basketId], references: [id])
  product   Product   @relation(fields: [productId], references: [id])
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@map("basket_items")
}

model Order {
  id          Int         @id @default(autoincrement())
  totalAmount Float
  address     String
  status      OrderStatus @default(PENDING)
  userId      Int
  user        User        @relation(fields: [userId], references: [id])
  basketId    Int
  basket      Basket      @relation(fields: [basketId], references: [id])
  payment     Payment?
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  deletedAt   DateTime?

  @@map("orders")
}

model OrderItem {
  id        Int       @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  price     Float
  order     Order     @relation(fields: [orderId], references: [id])
  product   Product   @relation(fields: [productId], references: [id])
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@map("order_items")
}

model StockMovement {
  id        Int                 @id @default(autoincrement())
  productId Int
  change    Int
  reason    StockMovementReason
  product   Product             @relation(fields: [productId], references: [id])
  createdAt DateTime            @default(now())
  deletedAt DateTime?

  @@map("stock_movements")
}

model Payment {
  id          Int           @id @default(autoincrement())
  amount      Decimal       @db.Decimal(18, 2)
  method      PaymentMethod
  status      PaymentStatus @default(PENDING)
  userId      Int
  user        User          @relation(fields: [userId], references: [id])
  orderId     Int           @unique
  order       Order         @relation(fields: [orderId], references: [id])
  gatewayRef  String?
  redirectUrl String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deletedAt   DateTime?

  @@map("payments")
}

model PaymentEventOutbox {
  id           Int           @id @default(autoincrement())
  paymentId    Int
  type         PaymentStatus
  payload      Json
  createdAt    DateTime      @default(now())
  dispatchedAt DateTime?

  @@index([type, dispatchedAt])
}

model Notification {
  id        Int              @id @default(autoincrement())
  type      NotificationType
  message   String
  sentAt    DateTime         @default(now())
  userId    Int
  user      User             @relation(fields: [userId], references: [id])
  deletedAt DateTime?

  @@map("notifications")
}

//* Enums */

enum Role {
  ADMIN
  USER
}

enum ProductStatus {
  AVAILABLE
  OUT_OF_STOCK
  DISCONTINUED
  UNKNOWN
}

enum ProductCategory {
  ELECTRONICS
  FASHION
  HOME_APPLIANCES
  BOOKS
  TOYS
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum PaymentMethod {
  CREDIT_CARD
  CRYPTOCURRENCY
  AFTER_DELIVERY
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum NotificationType {
  SMS
  EMAIL
}

enum StockMovementReason {
  INITIAL_STOCK
  ORDER_PLACED
  ORDER_CANCELLED
  STOCK_ADJUSTMENT
  RETURNED_ITEM
  INVENTORY_AUDIT
  RESERVED_INVENTORY
}
